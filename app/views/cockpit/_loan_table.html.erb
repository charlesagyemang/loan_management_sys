

<div class="card">
  <div class="card-header border-0">
    <div class="row align-items-center">
      <div class="col">
        <h3 class="mb-0">Most Recent Loans Given Out</h3>
      </div>
      <div class="col text-right">
        <a href="/loans" class="btn btn-sm btn-primary">All Loans</a>
      </div>
    </div>
  </div>
  <div class="table-responsive">
    <!-- Projects table -->

        <table id="loans-table" class="table">
            <thead>
            <tr>
                <th>Loaner</th>
                <th>Principal</th>
                <th>Interest</th>
                <th>Amount + Int</th>
                <th>Details</th>
            </tr>
            </thead>

            <tbody>
            <% data.each do |loan| %>
                <tr>
                  <td><%= loan.loaner.full_name %></td>
                  <td><%= loan.principal %></td>
                  <td><%= loan.amount - loan.principal %></td>
                  <td><%= loan.amount %></td>
                  <td><%= loan.details %></td>
                </tr>
            <% end %>
            </tbody>
        </table>
    
  </div>
</div>